<source>
  @type tail
  path /var/log/httpd-access.log
  pos_file /var/log/httpd-access.log.pos
  tag apache.access
</source>

<filter access>
  @type record_transformer
  <record>
    hostname ${hostname}
  </record>
</filter>


<match apache.access>
  @type file
  path /var/log/fluent/httpd-access_fluentd.log
</match>

